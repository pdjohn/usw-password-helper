<Page x:Class="PasswordHelper.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PasswordHelper"
      mc:Ignorable="d"
      ShowsNavigationUI="False"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid>
        <StackPanel HorizontalAlignment="Stretch" Margin="92,50,92,50">
            <Rectangle Height="100" Stroke="Transparent" Width="572"/>
            <TextBox x:Name="username" VerticalAlignment="Center" TextWrapping="Wrap" Text="Username" Height="36" TextChanged="TextBox_TextChanged"/>
            <Rectangle Height="20" Stroke="Transparent" Width="572"/>
            <PasswordBox x:Name="password" Password="password" VerticalAlignment="Center" Height="36"/>
            <Rectangle Height="20" Stroke="Transparent" Width="572"/>
            <StackPanel Orientation="Horizontal" Height="30" Width="615">
                <Button Width="50" Content="Login" Click="LgoinButton"/>
                <Rectangle Height="20" Stroke="Transparent" Width="5"/>
                <Button Width="60" Content="Register" Click="RegisterButton"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
